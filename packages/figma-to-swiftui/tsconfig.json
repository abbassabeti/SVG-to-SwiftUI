{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "lib": ["es6"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "isolatedModules": false
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "**/tests/*"]
}
